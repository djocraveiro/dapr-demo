<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-white" id="productTitle">@Product.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-frame">
                    <img src="@Product.Image" alt="Image Not Available" class="card-img-resp">
                    </div>
                <div class="card-body">
                    <h5>Price: <b>@Product.Price</b></h5>
                    <p class="card-text">Description: <b>@Product.Description.</b></p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Product Product { get; set; }

    protected override void OnParametersSet()
    {
        if (Product == null)
        {
            Product = new Product();
        }

        base.OnParametersSet();
    }
}